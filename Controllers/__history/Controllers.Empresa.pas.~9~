unit Controllers.Empresa;

interface

uses Horse,
     System.SysUtils,
     System.JSON;

procedure RegistrarRotas;
procedure Listar(Req: THorseRequest; Res: THorseResponse; Next: TProc);
procedure Inserir(Req: THorseRequest; Res: THorseResponse; Next: TProc);
procedure Editar(Req: THorseRequest; Res: THorseResponse; Next: TProc);
procedure Excluir(Req: THorseRequest; Res: THorseResponse; Next: TProc);

implementation

procedure RegistrarRotas;
begin
    THorse.Get('/Empresa', Listar);
    THorse.Post('/Empresa', Inserir);
    THorse.Put('/Empresa', Editar);
    THorse.Delete('/Empresa', Excluir);
end;

procedure Listar(Req: THorseRequest; Res: THorseResponse; Next: TProc);
var
//    Dm: TDm;
    filtro: string;
begin
  Res.Send('Aqui vai listar as Empresas');
    try
        try
//            Dm := TDm.Create(nil);

            filtro := Req.Query['filtro'];

//            Res.Send<TJsonArray>(Dm.empresaListar(filtro));

        except on ex:exception do
            Res.Send('Ocorreu um erro: ' + ex.Message).Status(500);
        end;
    finally
//        FreeAndNil(Dm);
    end;
end;

procedure Inserir(Req: THorseRequest; Res: THorseResponse; Next: TProc);
begin
    Res.Send('Aqui vou inserir empresa').Status(201);
end;

procedure Editar(Req: THorseRequest; Res: THorseResponse; Next: TProc);
begin
    Res.Send('Aqui vou editar os empresa').Status(200);
end;

procedure Excluir(Req: THorseRequest; Res: THorseResponse; Next: TProc);
begin
    Res.Send('Aqui vou excluir os empresa').Status(200);
end;

end.
